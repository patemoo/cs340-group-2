<h1>{{product.name}}</h1>

<ul>
    <li>{{product.sku}}</li>
    <li>{{product.price}}</li>
    <li>{{product.description}}</li>
    <li>{{product.brandName}}</li>
    <li>{{product.modelName}}</li>
    <li>in stock: {{product.inStock}}</li>
</ul>

<a href="/cart/{{product.id}}">Add to cart</a>
<button onclick="reviews.onWriteClick(event)">Write review</button>
<button onclick="product.onEditClick(event)">Edit</button>
<a href="/products/{{product.id}}/delete">Delete</a>

<hr>

<form method="POST" action="/products/{{product.id}}/reviews" id="review-editor" class="review-editor">
    <h3>Leave a review:</h3>
    <fieldset>
        <label>Title
            <input type="text" name="title">
        </label>
        <label>Rating
            <input type="text" name="rating">
        </label>
        <label>Comment
            <textarea name="comment" id="" cols="30" rows="10"></textarea>
        </label>
        <input hidden type="" name="pid" value="{{product.id}}">
        <input hidden type="" name="cid" value="{{customer.id}}">
    </fieldset>
    <button type="submit">Submit</button>
</form>

<form method="POST" action="/products/{{product.id}}/update" id="product-editor" class="product-editor">
    <h3>Edit product:</h3>
    <fieldset>
        <label>SKU
            <input type="text" name="sku" value="{{product.sku}}">
        </label>
        <label>Price
            <input type="text" name="price" value="{{product.price}}">
        </label>
        <label>Name
            <input type="text" name="name" value="{{product.name}}">
        </label>
        <label>Description
            <input type="text" name="description" value="{{product.description}}">
        </label>
        <label>Brand
            <input type="text" name="brandName" value="{{product.brandName}}">
        </label>
        <label>Model
            <input type="text" name="modelName" value="{{product.modelName}}">
        </label>
        <label>Qty in stock
            <input type="number" name="inStock" value="{{product.inStock}}">
        </label>
    </fieldset>
    <button type="submit">Submit</button>
</form>

{{#each reviews}}
    <div class="review">
        <span>{{this.title}}</span>
        <p>rating: <span>{{this.rating}}</span><p></p>
        <p>{{this.body}}</p>
    </div>
{{/each}}